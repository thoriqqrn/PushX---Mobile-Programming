rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - Allow read for all authenticated users (for leaderboard)
    // Allow write only for own document
    match /users/{userId} {
      // Semua user yang sudah login bisa baca data semua user (untuk leaderboard)
      allow read: if request.auth != null;
      
      // User hanya bisa update data mereka sendiri
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow create untuk user baru saat register
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Sessions collection - User bisa read/write session mereka sendiri
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
